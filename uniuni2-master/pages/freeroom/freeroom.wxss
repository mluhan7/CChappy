@import "../../old.wxss";

.disable {
    user-select: none;
    color: #e7e4e4;
}

.container {
    background: white;
}
.date {
    font-size: 12px;
    height: 16px;
}
.header {
    margin: 5px 0 15rpx 0;
    padding-bottom: 10px;
    font-size: 14px;
    border-bottom: 1px solid #c5c3c3;
}
.header>view+view {
    margin-top: 8rpx;
}
.pushright {
    width: 60px;
    color: gray;
}
.bt-header {
    font-size: 14px;
    margin-right: 20rpx;
    padding: 0 8px;
    height: 24px;
    line-height: 24px;
    /*background-color: #e7e4e4;*/
}
.bt-access {
    font-size: 14px;
    color: white;
    font-weight: 700;
    margin-top: 8px;
    background-color: #333333;
}

/*课程表*/
.swaper-tt {
    font-size: 14px;
}
.left {
    display: inline-block;
    width: 66rpx;
    margin-right: 3px;
}
.title {
    height: 20px;
    margin-bottom: 5px;
    font-size: 14px;
}
.room {
    height: 66rpx;
    line-height: 66rpx;
    border: 1px solid #0081ff;
    border-radius: 5px;
    margin-bottom: 2px;
    font-size: 12px;


    text-align: center;
}
.right {
    display: inline-block;
    flex-grow: 1;
}
/*1~2节*/
.t-item {
    display: inline-block;
    box-sizing: border-box;
    width: 20%;
    text-align: center;
}

.line {
    width: 100%;
}
.c-common {
    box-sizing: border-box;
    width: 20%;
    height: 66rpx;
    border-radius: 5px;
    margin-bottom: 2px;
    margin-left: 2px;
    border: 1px solid transparent;
    /*background-color: #f3f3f3;*/
    color: transparent;

}
