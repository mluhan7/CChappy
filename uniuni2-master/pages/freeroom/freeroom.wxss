/*签名模块*/
.sign-container{
    margin-top: 40rpx;
    margin-bottom: 8px;
    justify-content: center;
    width: 100%;
}
.my-sign{
    width: 100%;
    border-bottom: 1px solid #333;
}
.my-sign input{
    width: 100%;
}
.sign-placeholder{
    font-size: 14px;
}
.sign-image{
    width: 45rpx;
    height: 45rpx;
}

/*便签*/
.note-container{
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    font-size: 16px;
}
.my-note{
    border: 1px solid #333;
    border-radius: 4px;
    padding: 8px;
    min-height: 20px;
    width: 100%;
}
.note-placeholder{
    font-size: 14px;
}

.myflex-row {
    display: flex;
    justify-content: space-between;
}

.selectTitle {
    width: 140rpx;
}