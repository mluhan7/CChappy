/*甜甜圈loading start*/

@keyframes donut-spin {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}

.donut {
  height: 60rpx;
  width: 60rpx;
  border: 4rpx solid #333;
  border-radius: 50%;
  animation: donut-spin 0.5s linear infinite;
}

