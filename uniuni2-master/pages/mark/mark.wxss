.VerticalNav.nav {
    width: 200rpx;
    white-space: initial;

}

.VerticalNav.nav .cu-item {
    width: 100%;
    text-align: center;
    /* background-color: #fff; */
    margin: 0;
    border: none;
    height: 50px;
    position: relative;
}
/* .cu-item-text {
